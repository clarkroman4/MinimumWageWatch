@model FinalProject.ViewModels.ViewCityCountyWagesViewModel;
@{
    ViewData["Title"] = "See City and County Minimum Wages";
}

<h1>See City and County Minimum Wages</h1>
<div>
    <form asp-controller="Wage" asp-action="AddCityWage" method="post"><input type="submit" class="btn-primary" value="Add New City Wage" /></form>
    <form asp-controller="Wage" asp-action="AddCountyWage" method="post"><input type="submit" class="btn-primary" value="Add New County Wage" /></form>
</div>
<div>
    <h3>City Minimum Wages</h3>
    <table class="table-striped">
        <tr>
            <th>City Name</th>
            <th>State Name</th>
            <th>Minimum Wage</th>
            <th>Effective Date</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
      
            @foreach (var city in Model.CityWage)
            {
             <tr>
                <td>@city.City</td>
                <td>@city.State</td>
                <td>@city.MinWage</td>
                <td>@city.EffectiveDate</td>
                <td><form asp-controller="Wage" asp-action="EditCityWage" asp-route-id="@city.ID"><input type="submit" value="Edit" class="btn-secondary"/></form></td>
                 <td><form asp-controller="Wage" asp-action="DeleteCityWage" asp-route-id="@city.ID"><input type="submit" value="Delete" class="btn-secondary"/></form></td>
            </tr>
            }
 
    </table>
</div>
<div>
    <h3>County Minimum Wages</h3>
    <table class="table-striped">
        <tr>
            <th>County Name</th>
            <th>State Name</th>
            <th>Minimum Wage</th>
            <th>Effective Date</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        <tr>
            @foreach (var county in Model.CountyWage)
            {
                <td>@county.County</td>
                <td>@county.State</td>
                <td>$@county.MinWage</td>
                <td>@county.EffectiveDate</td>
                <td><form asp-controller="Wage" asp-action="EditCountyWage" asp-route-id="@county.ID"><input type="submit" value="Edit" class="btn-secondary" /></form></td>
                <td><form asp-controller="Wage" asp-action="DeleteCountyWage" asp-route-id="@county.ID"><input type="submit" value="Delete" class="btn-secondary" /></form></td>
            }
        </tr>
    </table>
</div>
